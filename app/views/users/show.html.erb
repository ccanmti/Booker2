<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image, size:"50x50" %>
    <table>
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      <tbody>
    </table>
    <%= link_to  edit_user_path,class: 'btn-outline-secondary btn-block edit_user_path' do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
    <%= render 'books/new', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
  <%= render 'books/list', books: @books %>
  </div>
</div>
</main>